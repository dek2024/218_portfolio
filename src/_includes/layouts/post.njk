{% extends "layouts/base.njk" %}

{% block content %}
<article class="post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
      {% if tags %}
        <span class="post-tags">
          {% for tag in tags | filterTagList %}
            <a href="/blog/tags/{{ tag | slugify }}/" class="tag">#{{ tag }}</a>
          {% endfor %}
        </span>
      {% endif %}
    </div>
    {% if description %}
      <p class="post-description">{{ description }}</p>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  <footer class="post-footer">
    <nav class="post-navigation">
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="prev-post">← Previous Post</a>
      {% endif %}
      {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="next-post">Next Post →</a>
      {% endif %}
    </nav>
  </footer>
</article>
{% endblock %}
