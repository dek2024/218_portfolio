{% extends "layouts/base.njk" %}

{% block content %}
<article class="page">
  <header class="page-header">
    <h1>{{ title }}</h1>
    {% if description %}
      <p class="page-description">{{ description }}</p>
    {% endif %}
  </header>
  
  <div class="page-content">
    {{ content | safe }}
  </div>
</article>
{% endblock %}
